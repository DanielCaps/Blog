@model Blog.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Edit";
}


<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.css" rel="stylesheet" />
<div class="row" style="background-color:white; justify-content:center">
    <div class="col-md-4">
        <form style="background-color: white" asp-action="Edit" asp-controller="Panel" enctype="multipart/form-data">
            <input asp-for="Post_Id" type="hidden" />
            <div>
                <label>Title</label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div>
                <label>Description</label>
                <input asp-for="Description" />
            </div>
            <div>
                <label>Tags</label>
                <input asp-for="Tags" />
            </div>
            <div>
                <label>Category</label>
                <select asp-for="Category">
                    <option value="Travel">Travel</option>
                    <option value="Programing">Programing</option>
                    <option value="Photography">Photography</option>
                </select>
            </div>
            <div>
                <label asp-for="Body" class="control-label"></label>
                <textarea id="editor" asp-for="Body"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="CurrentImage" type="hidden" />
                <input asp-for="Image" />
            </div>
            <input style="background-color: #212931" type="submit" value="Save" />
            <div asp-validation-summary="All"></div>
        </form>
        <div>
            <a style="color:black" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.js"></script>
    <script>
        $('#editor').trumbowyg({
        });
    </script>
}
