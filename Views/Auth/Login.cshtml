@model Blog.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<form class="sign-in-form" asp-controller="Auth" asp-action="Login" method="post">
    <div>
        <label style="color:wheat">Username</label>
        <input style="color:wheat" asp-for="UserName" />
    </div>
    <div>
        <label style="color:wheat">Password</label>
        <input style="color:wheat" asp-for="Password"/>
    </div>
    <div>
        <button type="submit" value="Login">Login</button>
        <a style="color:wheat;" margin-left:10px;" asp-action="Register" asp-controller="Auth">Register</a>
    </div>
    
</form>